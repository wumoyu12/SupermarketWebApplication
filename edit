	</head>

	<body>
		<h1>Supermarket</h1>
		
		<!-- 登录表单 -->
		<form id="loginForm" action="/login" method="post">
			<div id="divlogin">
				<h2>Log In to Supermarket</h2>
				<table class="form-table">
					<tr>
						<td><label for="login_username">Username:</label></td>
						<td><input id="login_username" name="username" type="text" required></td>
					</tr>
					<tr>
						<td><label for="login_password">Password:</label></td>
						<td><input id="login_password" name="password" type="password" required></td>
					</tr>
					<tr>
						<td colspan="2"><button type="submit">Log In</button></td>
					</tr>
				</table>
				<p>Don't have an account? <a href="#" id="showSignup">Sign Up</a></p>
			</div>
		</form>
		
		<!-- 注册表单 (初始隐藏) -->
		<form id="signupForm" action="/signup" method="post" style="display:none;">
			<div id="divsignup">
				<h2>Sign Up to Supermarket</h2>
				<table class="form-table">
					<tr>
						<td><label for="signup_username">Username:</label></td>
						<td><input id="signup_username" name="username" type="text" required></td>
					</tr>
					<tr>
						<td><label for="signup_password">Password:</label></td>
						<td><input id="signup_password" name="password" type="password" required></td>
					</tr>
					<tr>
						<td><label for="signup_rpassword">Repeat Password:</label></td>
						<td><input id="signup_rpassword" name="rpassword" type="password" required></td>
					</tr>
					<tr>
						<td colspan="2"><button type="submit">Register</button></td>
					</tr>
				</table>
				<p>Already have an account? <a href="#" id="showLogin">Log In</a></p>
			</div>
		</form>
		
		<script>
			
			document.getElementById('showSignup').addEventListener('click', function(e) {
				e.preventDefault();
				document.getElementById('loginForm').style.display = 'none';
				document.getElementById('signupForm').style.display = 'block';
			});
			
			document.getElementById('showLogin').addEventListener('click', function(e) {
				e.preventDefault();
				document.getElementById('signupForm').style.display = 'none';
				document.getElementById('loginForm').style.display = 'block';
			});
		</script>
	</body>
